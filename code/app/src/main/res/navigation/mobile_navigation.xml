<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ass1.navviewsteal.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_screen" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_post"
            app:destination="@id/navigation_post" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_history"
            app:destination="@id/navigation_history" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.ass1.navviewsteal.ui.dashboard.DashboardFragment"
        android:label="@string/title_history"
        tools:layout="@layout/history_screen" >
        <action
            android:id="@+id/action_navigation_history_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_history_to_navigation_post"
            app:destination="@id/navigation_post" />
    </fragment>

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.ass1.navviewsteal.ui.notifications.NotificationsFragment"
        android:label="@string/title_post"
        tools:layout="@layout/post_screen" >
        <action
            android:id="@+id/action_navigation_post_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_post_to_navigation_history"
            app:destination="@id/navigation_history" />
    </fragment>
</navigation>