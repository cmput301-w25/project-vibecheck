<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup_view"
    android:background="@drawable/gradient_drawable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="345dp"
        android:layout_height="451dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/login_rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/salsa"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/login_black"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/salsa"
            android:text="Email"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_signup_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_text"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/edit_text_signup_username"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:autofillHints="username"
            android:background="@drawable/login_rounded_input"
            android:ems="10"
            android:fontFamily="@font/salsa"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_account" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/salsa"
            android:text="Username"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_signup_username" />

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:autofillHints="username"
            android:background="@drawable/login_rounded_input"
            android:ems="10"
            android:fontFamily="@font/salsa"
            android:padding="8dp"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/confirm_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/salsa"
            android:text="Password"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/edit_text_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_username"
            app:layout_constraintVertical_bias="0.50" />

        <EditText
            android:id="@+id/edit_text_confirm_password"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:autofillHints="password"
            android:background="@drawable/login_rounded_input"
            android:ems="10"
            android:fontFamily="@font/salsa"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/login_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/signup_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/salsa"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Sign Up"
            android:textColor="@color/login_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password" />

        <Button
            android:id="@+id/cancel_signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="27dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/salsa"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Cancel"
            android:textColor="@color/login_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>