<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ui.home.HomeFragment">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/salsa"
            android:text="VibeCheck"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black" />

        <!-- Search Icon -->
        <ImageButton
            android:id="@+id/search_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="12dp"
            android:contentDescription="Search"
            android:background="@drawable/search_icon"
            android:backgroundTint="@color/black"/>

        <!-- Filter Icon -->
        <ImageButton
            android:id="@+id/filter_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="12dp"
            android:contentDescription="Filter"
            android:background="@drawable/filter_icon"
            android:backgroundTint="@color/black" />

        <!-- Notification Icon -->
        <ImageButton
            android:id="@+id/notification_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="Notifications"
            android:background="@drawable/notification_icon"
            android:backgroundTint="@color/black" />
    </LinearLayout>

    <!-- RecyclerView for Feed -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_feed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        tools:listitem="@layout/home_screen_post"/>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Home Page"
            android:background="@drawable/home_icon"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:id="@+id/btn_history"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Mood History"
            android:background="@drawable/history_icon"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:id="@+id/btn_add_mood"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Add Mood"
            android:background="@drawable/add_icon"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:id="@+id/btn_mood_map"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Mood Map"
            android:background="@drawable/map_icon"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="Profile"
            android:background="@drawable/account_icon"
            android:backgroundTint="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>